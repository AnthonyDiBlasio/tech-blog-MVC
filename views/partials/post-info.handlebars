<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}} </b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
            {{#if comments.length}}
            <p>{{created_at}}</p>
            <p> {{comment_text}}</p>
            {{/if}}
        </div>
      
        </div>
    </div>
</article>